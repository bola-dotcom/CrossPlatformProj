<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Label Text="Welcome" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes ="Bold" FontSize="30" TextColor="AliceBlue"/>
            <HorizontalStackLayout>
                <Label Text="Name:"/>
                <Entry x:Name="NameBox"/>
            </HorizontalStackLayout>
            <Button x:Name="startButton" Text="Start"/>
            <Label x:Name="movies" Text="" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes ="Bold" FontSize="30" TextColor="AliceBlue"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
